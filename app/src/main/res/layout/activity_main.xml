<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/map_background">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/newLocationButtonText"
        android:id="@+id/addNewLocationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="newLocation"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Game Screen"
        android:id="@+id/gameScreenButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addNewLocationButton"
        android:layout_marginTop="25dp"
        android:onClick="gameScreen"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendSMSScreenBtn"
        android:text="SMS Screen"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gameScreenButton"
        android:layout_marginTop="25dp"
        android:onClick="smsScreen"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginScreenBtn"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sendSMSScreenBtn"
        android:layout_marginTop="25dp"
        android:onClick="loginScreen"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/helpScreenBtn"
        android:text="App Help"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginScreenBtn"
        android:layout_marginTop="25dp"
        android:onClick="helpScreen"/>


</RelativeLayout>
