<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.rasmussen.mobile.project06.GameBoard"
    android:background="@color/material_blue_grey_800">

    <TextView
        android:id="@+id/display_treasure1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="#ffffff"
        android:gravity="center"
        android:backgroundTint="#64ffffff"
        android:textColor="#010101"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/display_treasure2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="#ffffff"
        android:gravity="center"
        android:backgroundTint="#64ffffff"
        android:textColor="#010101"
        android:layout_below="@+id/display_treasure1"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/display_treasure3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="#ffffff"
        android:gravity="center"
        android:backgroundTint="#64ffffff"
        android:textColor="#010101"
        android:layout_below="@+id/display_treasure2"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/display_treasure4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="#ffffff"
        android:gravity="center"
        android:backgroundTint="#64ffffff"
        android:textColor="#010101"
        android:layout_below="@+id/display_treasure3"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
